<ul class="media-list">
  <% like_microposts.each do |like_micropost| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(like_micropost.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to like_micropost.user.name, user_path(like_micropost.user) %> <span class="text-muted">posted at <%= like_micropost.created_at %></span>
        </div>
        <div>
          <p><%= like_micropost.content %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate like_microposts %>
</ul>